<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4" >

    <Button
        android:id="@+id/bDrink"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/drinkvisualization"
        android:text="" />

    <Button
        android:id="@+id/bExercise"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/exercisevisualization"
        android:text="" />

    <Button
        android:id="@+id/bProductivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/productivityvisualization"
        android:text="" />

    <Button
        android:id="@+id/bMood"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="moodsvisualization"/>

</LinearLayout>