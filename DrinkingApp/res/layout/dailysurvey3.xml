<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvDS3Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Night I..."
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400sp"
        android:orientation="vertical"
        android:weightSum="8" >

        <CheckBox
            android:id="@+id/cbDS3Box1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Forgot or escaped from my responsibilities or problems"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbDS3Box2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Blacked out"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbDS3Box3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Felt closer/bonded to my friends"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbDS3Box4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Met new people"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbDS3Box5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Felt more attractive"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbDS3Box6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Felt less inhibited"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbDS3Box7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Was loud and belligerent"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/cbDS3Box8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Got sloppy and did something I now regret"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bDS3Finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/colorbutton"
            android:layout_marginBottom="10sp"
            android:textColor="#ffffff"
            android:text="Finish" />
    </LinearLayout>

</LinearLayout>