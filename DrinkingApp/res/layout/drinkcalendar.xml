<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalenderViewExampleActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Month"
            android:layout_below="@+id/bNextMonth"
            android:layout_marginTop="-20sp"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bPreviousMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Back" />

        <Button
            android:id="@+id/bNextMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Next" />

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:text="2000"
            android:textSize="20sp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/gvDrinkCalendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="40dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:listSelector="#00ff8c"
        android:numColumns="7"
        android:verticalSpacing="0sp" >
    </GridView>

    <TextView
        android:id="@+id/tvCalendarBottomDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

        <TextView
        android:id="@+id/tvInfoDisplay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:background="#0099CC"
        android:text="Click on a colored date for more information." />
        
</LinearLayout>