<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#0099CC"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/menu_top_buttons"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:gravity= "center"
        android:layout_weight="3">

        <Button
            android:id="@+id/bMenuTracking"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/trackingmenubutton" />
	
	    <Button
	        android:id="@+id/bMenuAssessment"
	        android:layout_width="120dp"
	        android:layout_height="120dp"
	        android:layout_marginLeft="20dp"
	        android:background="@drawable/assessmenubutton"
	        android:text="" />
	</LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_weight="3">
		   <Button
		       android:id="@+id/bMenuVisualize"
		       android:layout_width="120dp"
		       android:layout_height="120dp"
		       android:layout_marginRight="20dp"
		       android:background="@drawable/visualizemenubutton"
		       android:text="" />

		   <Button
		       android:id="@+id/bMenuBadges"
		       style="?android:attr/buttonStyleSmall"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:text="Badges" />
		
		   <Button
		       android:id="@+id/bMenuSettings"
		       android:layout_width="120dp"
		       android:layout_height="120dp"
		       android:layout_marginLeft="20dp"
			   android:background="@drawable/settingsmenubutton"
			   android:text="" />

	</LinearLayout>
		   <Button
		       android:id="@+id/bSendData"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:textColor="#ffffff"
		       android:visibility="visible"
		       android:text="Send Data" />

</LinearLayout>
