<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CalenderViewExampleActivity"
    android:background="@drawable/circle_gradient"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="2000"
            android:textSize="20sp"
            android:textColor="#51A7F9" />
        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvYear"
            android:layout_centerHorizontal="true"
            android:text="Month"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#51A7F9" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/gvDrinkCalendar"
                android:layout_width="fill_parent"
                android:layout_height="360dp"
                android:clipChildren="false"
                android:clipToPadding="true"
                android:columnWidth="40dp"
                android:gravity="center"
                android:listSelector="#00ff8c"
                android:numColumns="7"
                android:stretchMode="columnWidth"
                android:verticalSpacing="2dp" >
            </GridView>

            <LinearLayout
                android:id="@+id/clickAppear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

			<TextView
                    android:id="@+id/month_overview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#51A7F9"
                    android:text=""
                    android:gravity="center_horizontal"
                   
                    android:textStyle="bold"
                    android:textSize="20sp" />
                
                <LinearLayout
                    android:layout_marginTop="5dp"
			    	android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:orientation="horizontal">
                	
                	<ImageView
            			android:layout_width="40dp"
	            		android:layout_height="40dp"
	            		android:background="@android:color/transparent"
	            		android:src="@drawable/ic_calendar_beer" />
	 
	                <TextView
	                    android:id="@+id/drink_count"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:gravity="center"
	                    android:text=""
	                    android:textColor="#585858"
	                    android:textSize="18sp"
	                    android:layout_marginTop="5dp" />

				</LinearLayout>
				<LinearLayout
			    	android:layout_width="match_parent"
            		android:layout_height="wrap_content">
                	
                	<ImageView
            			android:layout_width="35dp"
	            		android:layout_height="35dp"
	            		android:background="@android:color/transparent"
	            		android:src="@drawable/ic_time_drinking" 
	            		android:paddingRight="5dp"/>
	 
	                <TextView
	                    android:id="@+id/drink_time"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:gravity="center"
	                    android:text=""
	                    android:textColor="#585858"
	                    android:textSize="18sp"
	                    android:layout_marginTop="5dp" />
				</LinearLayout>
				
					<LinearLayout
			    	android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:orientation="horizontal">
					<ImageView
			        	android:layout_width="35dp"
				        android:layout_height="35dp"
				        android:background="@android:color/transparent"
				        android:src="@drawable/ic_money_calendar"/>
	        
	                <TextView
	                    android:id="@+id/month_money"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:gravity="center"
	                    android:text=""
	                    android:textColor="#585858"
	                    android:textSize="18sp"
	                    android:layout_marginTop="5dp" />

				</LinearLayout>
				
				<LinearLayout
			    	android:layout_width="match_parent"
            		android:layout_height="wrap_content"
            		android:orientation="horizontal">
					
					<ImageView
			        	android:id="@+id/drink_smile_calendar"
			        	android:layout_width="35dp"
				        android:layout_height="35dp"
				        android:background="@android:color/transparent"
				        android:src="@drawable/drink_smile_tracker_icon"
				        android:paddingRight="5dp"/>
	        
	                <TextView
	                    android:id="@+id/month_bac"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:text=""
	                    android:gravity="center"
	                    android:textColor="#585858"
	                    android:textSize="18sp"
	                    android:layout_marginTop="5dp" />

			</LinearLayout>
		</LinearLayout>
		</LinearLayout>
    </ScrollView>

</LinearLayout>